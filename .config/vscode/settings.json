{
  "vim.cursorStylePerMode.insert": "line-thin",
  "vim.cursorStylePerMode.normal": "underline",
  "vim.cursorStylePerMode.visual": "block-outline",
  "vim.matchpairs": "(:),{:},[:],<:>",
  "vim.whichwrap": "h,l",
  "vim.easymotion": true,
  "vim.smartRelativeLine": true,
  "vim.surround": true,
  "vim.camelCaseMotion.enable": true,
  "vim.sneak": true,
  "vim.sneakReplacesF": true,
  "vim.useSystemClipboard": true,
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": ["w"],
      "after": ["$"],
    },
    {
      "before": ["0"],
      "after": ["^"],
    },
    {
      "before": [">"],
      "after": [">", "g", "v"]
    },
    {
      "before": ["<"],
      "after": ["<", "g", "v"]
    },
    {
      "before": ["J"],
      "after": ["3", "j"]
    },
    {
      "before": ["K"],
      "after": ["3", "k"]
    },
    {
      "before": ["d"],
      "after": ["\"", "a", "d"]
    },
  ],
  "vim.insertModeKeyBindingsNonRecursive": [
    {
      "before": ["i", "i"],
      "after": ["esc"]
    }
  ],
  "vim.operatorPendingModeKeyBindingsNonRecursive": [
    {
      "before": ["w"],
      "after": ["$"]
    }, 
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["q", "q"],
      "after": [":", "q", "!", "enter"],
    },
    {
      "before": ["d"],
      "after": ["\"", "a", "d"]
    },
    {
      "before": ["J"],
      "after": ["3", "j"]
    },
    {
      "before": ["K"],
      "after": ["3", "k"]
    },
    {
      "before": [" "],
      "after": ["a", " ", "esc"]
    },
    {
      "before": ["f", "f"],
      "after": ["<leader>", "<leader>", "<leader>", "b", "d", "w"]
    },
    {
      "before": ["t"],
      "after": ["<C-r>"]
    },
    {
      "before": ["x"],
      "after": ["\"", "a", "x"]
    },
    {
      "before": ["d"],
      "after": ["\"", "a", "d"]
    },
    {
      "before": ["<tab>"],
      "after": [">", ">"]
    },
    {
      "before": ["enter"],
      "after": ["i", "enter", "esc"]
    },
    {
      "before": ["w"],
      "after": ["$"],
    },
    {
      "before": ["0"],
      "after": ["^"],
    },
  ],
  "workbench.colorTheme": "Noctis Obscuro",
  "editor.cursorBlinking": "solid",
  "files.autoSave": "afterDelay",
  "files.autoSaveWhenNoErrors": true,
  
  "workbench.editorAssociations": {
    "*.copilotmd": "vscode.markdown.preview.editor",
    "*.csv": "gc-excelviewer-csv-editor",
    "*.md": "vscode.markdown.preview.editor"
  },
  "[html]": {
    "editor.comments.insertSpace": true,
    "editor.defaultFormatter": "vscode.html-language-features",
    "editor.tabSize": 2,
  },
  "[typescript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[scss]": {
    "editor.defaultFormatter": "vscode.css-language-features",
    "editor.tabSize": 2,
  },
  "[python]": {
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.formatOnType": true,
    "editor.wordBasedSuggestions": "off"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "vs-kubernetes": {
    "vscode-kubernetes.helm-path-linux": "/home/vtzy/.local/state/vs-kubernetes/tools/helm/linux-amd64/helm",
    "vscode-kubernetes.minikube-path-linux": "/home/vtzy/.local/state/vs-kubernetes/tools/minikube/linux-amd64/minikube"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  
  "explorer.confirmDelete": false,
  "breadcrumbs.enabled": false,
  "editor.wordWrap": "on",
  "editor.glyphMargin": false,
  "editor.fontFamily": "'Fira Code', 'monospace', monospace",
  "editor.fontWeight": "440",
  "editor.fontLigatures": true,
  "workbench.productIconTheme": "icons-carbon",
 
  // "git.autofetch": true,
  "github.copilot.enable": {
    "plaintext": true,
    "markdown": true,
    "scminput": true
  },
  "workbench.activityBar.location": "top",
  "editor.minimap.enabled": false,
  "window.density.editorTabHeight": "compact",
  "editor.showFoldingControls": "never",
  "csv-preview.lineNumbers": "source",
  "window.menuBarVisibility": "toggle",
  "jupyter.askForKernelRestart": false,
  "notebook.editorOptionsCustomizations": {
    "editor.tabSize": 2,
    "editor.indentSize": 2,
    "editor.insertSpaces": true
  },
  "editor.tabSize": 2,
  "editor.unicodeHighlight.ambiguousCharacters": false,
  "editor.unicodeHighlight.invisibleCharacters": false,

}